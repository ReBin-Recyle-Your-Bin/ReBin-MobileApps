<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_welcome_scene"
    tools:context=".view.welcome.WelcomeActivity">


    <TextView
        android:id="@+id/skipWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:text="Skip"
        android:textColor="@color/dark_olive_green"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageWelcome1"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/slide_welcome_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titleWelcome1"
        android:fontFamily="@font/poppins_semibold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/title_welcome_1"
        android:textColor="@color/dark_olive_green"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageWelcome1"
        app:layout_constraintStart_toStartOf="@+id/imageWelcome1"
        app:layout_constraintTop_toBottomOf="@+id/imageWelcome1" />

    <TextView
        android:id="@+id/descWelcome1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:text="@string/desc_welcome_1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/titleWelcome1"
        app:layout_constraintStart_toStartOf="@+id/titleWelcome1"
        app:layout_constraintTop_toBottomOf="@+id/titleWelcome1" />

    <ImageView
        android:id="@+id/imageWelcome2"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/slide_welcome_2"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titleWelcome2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_olive_green"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageWelcome2"
        app:layout_constraintStart_toStartOf="@+id/imageWelcome2"
        app:layout_constraintTop_toBottomOf="@+id/imageWelcome2"
        android:text="@string/title_welcome_2" />

    <TextView
        android:id="@+id/descWelcome2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/titleWelcome2"
        app:layout_constraintStart_toStartOf="@+id/titleWelcome2"
        app:layout_constraintTop_toBottomOf="@+id/titleWelcome2"
        android:text="@string/desc_welcome_2" />

    <ImageView
        android:id="@+id/imageWelcome3"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/slide_welcome_3"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titleWelcome3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_olive_green"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageWelcome3"
        app:layout_constraintStart_toStartOf="@+id/imageWelcome3"
        app:layout_constraintTop_toBottomOf="@+id/imageWelcome3"
        android:text="@string/title_welcome_3" />

    <TextView
        android:id="@+id/descWelcome3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/titleWelcome3"
        app:layout_constraintStart_toStartOf="@+id/titleWelcome3"
        app:layout_constraintTop_toBottomOf="@+id/titleWelcome3"
        android:text="@string/desc_welcome_3" />

    <ImageView
        android:id="@+id/imageWelcome4"
        android:layout_width="0dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/logo_rebin"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titleWelcome4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_olive_green"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageWelcome4"
        app:layout_constraintStart_toStartOf="@+id/imageWelcome4"
        app:layout_constraintTop_toBottomOf="@+id/imageWelcome4"
        android:text="@string/title_welcome_4" />

    <TextView
        android:id="@+id/descWelcome4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/titleWelcome4"
        app:layout_constraintStart_toStartOf="@+id/titleWelcome4"
        app:layout_constraintTop_toBottomOf="@+id/titleWelcome4"
        android:text="@string/desc_welcome_4" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/welcome1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="32dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintEnd_toStartOf="@+id/welcome2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/dark_olive_green" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/welcome2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintBottom_toBottomOf="@+id/welcome1"
        app:layout_constraintEnd_toStartOf="@+id/welcome3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/welcome1"
        app:layout_constraintTop_toTopOf="@+id/welcome1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/dark_olive_green" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/welcome3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintBottom_toBottomOf="@+id/welcome2"
        app:layout_constraintEnd_toStartOf="@+id/welcome4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/welcome2"
        app:layout_constraintTop_toTopOf="@+id/welcome2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/dark_olive_green" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/welcome4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="32dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintBottom_toBottomOf="@+id/welcome3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/welcome3"
        app:layout_constraintTop_toTopOf="@+id/welcome3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_circle"
        app:tint="@color/dark_olive_green" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:alpha="0"
        android:backgroundTint="@color/dark_olive_green"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/lets_get_started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/welcome2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:alpha="100" />

</androidx.constraintlayout.motion.widget.MotionLayout>